<%- include('partials/header', { bodyClass: 'applicant-list' }) %>

  <div style="margin-bottom: 2rem;">
    <h2>Applicants for <span style="color: var(--primary)">
        <%= job.jobdesignation %>
      </span></h2>
  </div>

  <% if (applicants.length> 0) { %>
    <div class="job-grid">
      <% applicants.forEach(applicant=> { %>
        <div class="card">
          <h3 style="margin-bottom: 0.5rem;">
            <%= applicant.name %>
          </h3>
          <p style="color: var(--text-muted); margin-bottom: 0.25rem;">
            <%= applicant.email %>
          </p>
          <p style="color: var(--text-muted); margin-bottom: 1rem;">
            <%= applicant.contact %>
          </p>

          <a href="<%= applicant.resumePath %>" class="btn btn-secondary" target="_blank">Download Resume</a>
        </div>
        <% }); %>
    </div>
    <% } else { %>
      <div style="text-align: center; margin-top: 3rem;">
        <p style="color: var(--text-muted);">No applicants yet.</p>
      </div>
      <% } %>
<%- include('partials/footer') %>
