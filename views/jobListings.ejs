<%- include('partials/header', { bodyClass: 'job-listings' , currentUser }) %>

  <h1>Explore Opportunities</h1>

  <% if (jobs.length> 0) { %>
    <div class="job-grid">
      <% jobs.forEach(job=> { %>
        <div class="card job-card">
          <h3>
            <a href="/jobs/<%= job.id %>" style="color: inherit; text-decoration: none;">
              <%= job.jobdesignation %>
            </a>
          </h3>
          <div class="job-meta">
            <span>ğŸ¢ <%= job.companyname %></span>
            <span>ğŸ“ <%= job.location || 'Remote' %></span>
          </div>
          <p style="color: var(--text-muted); margin-bottom: 1.5rem;">
            Posted: <%= new Date(job.jobposted).toLocaleDateString() %>
          </p>
          <a href="/jobs/<%= job.id %>" class="btn">View Details</a>
        </div>
        <% }); %>
    </div>
    <% } else { %>
      <div style="text-align: center; margin-top: 3rem;">
        <p style="font-size: 1.2rem; color: var(--text-muted)">No jobs found currently.</p>
        <% if (currentUser) { %>
          <a href="/jobs/new" class="btn">Post the first job</a>
          <% } %>
      </div>
      <% } %>
        <%- include('partials/footer') %>