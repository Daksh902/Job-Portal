<%- include('partials/header', { bodyClass: 'login' }) %>

  <div class="auth-container">
    <div class="card">
      <div class="auth-header">
        <h1>Welcome Back</h1>
        <p style="color: var(--text-muted)">Please enter your details to sign in.</p>
      </div>

      <% if (error) { %>
        <div
          style="background: rgba(244, 63, 94, 0.1); border: 1px solid var(--accent); color: var(--accent); padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1rem;">
          <%= error %>
        </div>
        <% } %>

          <form action="/login" method="post">
            <div>
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" placeholder="john@example.com" required>
            </div>
            <div>
              <label for="password">Password</label>
              <input type="password" id="password" name="password" placeholder="••••••••" required>
            </div>
            <button type="submit" class="btn" style="width: 100%; margin-top: 1rem;">Sign In</button>
          </form>

          <p style="text-align: center; margin-top: 1.5rem; color: var(--text-muted);">
            Don't have an account? <a href="/register">Create one</a>
          </p>
    </div>
  </div>
<%- include('partials/footer') %>
